#include <stdio.h>

void bubble_sort(int arr[], int n) {
    int i, j, temp, swapped;
    for(i = 0; i < n-1; i++) {
        swapped = 0;
        for(j = 0; j < n-i-1; j++) {
            if(arr[j] > arr[j+1]) {
                temp = arr[j];
                arr[j] = arr[j+1];
                arr[j+1] = temp;
                swapped = 1;
            }
        }
        if(!swapped)  // No swaps â†’ already sorted
            break;
    }
}

int main() {
    int arr[100], n, i;
    printf("Enter number of elements: ");
    scanf("%d", &n);

    printf("Enter elements: ");
    for(i=0; i<n; i++)
        scanf("%d", &arr[i]);

    bubble_sort(arr, n);

    printf("Sorted Array: [");
    for(i=0; i<n; i++) {
        printf("%d", arr[i]);
        if(i < n-1) printf(", ");
    }
    printf("]");
    return 0;
}
