#include <stdio.h>

int max(int a, int b) {
    return (a > b) ? a : b;
}

int robLinear(int nums[], int start, int end) {
    int prev1 = 0, prev2 = 0, curr;
    for(int i = start; i <= end; i++) {
        curr = max(prev1, prev2 + nums[i]);
        prev2 = prev1;
        prev1 = curr;
    }
    return prev1;
int rob(int nums[], int n) {
    if (n == 1)
        return nums[0];
    // Case 1: Exclude last house
    int case1 = robLinear(nums, 0, n - 2);
    // Case 2: Exclude first house
    int case2 = robLinear(nums, 1, n - 1);
    return max(case1, case2);
}

int main() {
    int n, nums[100];
    printf("Enter number of houses: ");
    scanf("%d", &n);

    printf("Enter amount in each house:\n");
    for(int i = 0; i < n; i++)
        scanf("%d", &nums[i]);

    int result = rob(nums, n);
    printf("The maximum money you can rob without alerting the police is %d\n", result);

    return 0;
}
